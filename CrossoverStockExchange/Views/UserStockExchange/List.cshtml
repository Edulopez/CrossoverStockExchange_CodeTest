@model CrossoverStockExchange.Models.UserStockExchange.List

@{
    ViewBag.Title = "View";
}

<h2>User stock exchange List</h2>

<div>
    <h4>
        @Html.DisplayFor(x => x.UserName);
    </h4>
</div>
@if (Model.StockList != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StockList.First().Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockList.First().Price)
            </th> 
            <th></th>
        </tr>

        @foreach (var item in Model.StockList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Remove from my list", "Remove", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
@section scripts
{
    <script type="text/javascript">
        setInterval(function () {
            window.location.reload();
        }, 10000);
    </script>
}